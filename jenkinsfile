pipeline {
    agent any

    environment {
        NODE_VERSION = '18' // adjust if needed
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                checkout scm
            }
        }

        stage('Debug Workspace') {
            steps {
                echo 'Printing workspace structure...'
                sh 'ls -R'
            }
        }

        stage('Setup Node') {
            steps {
                echo "Setting up Node.js ${env.NODE_VERSION}..."
                sh "node -v"
                sh "npm -v"
            }
        }

        stage('Install Backend Dependencies') {
            steps {
                script {
                    if (fileExists('backend/package.json')) {
                        echo 'Installing backend dependencies...'
                        dir('backend') {
                            sh 'npm install'
                        }
                    } else {
                        echo 'Backend folder or package.json not found, skipping backend install.'
                    }
                }
            }
        }

        stage('Install Frontend Dependencies') {
            steps {
                script {
                    if (fileExists('frontend/package.json')) {
                        echo 'Installing frontend dependencies...'
                        dir('frontend') {
                            sh 'npm install'
                        }
                    } else {
                        echo 'Frontend folder or package.json not found, skipping frontend install.'
                    }
                }
            }
        }

        stage('Build Frontend') {
            steps {
                script {
                    if (fileExists('frontend/package.json')) {
                        echo 'Building frontend...'
                        dir('frontend') {
                            sh 'npm run build'
                        }
                    } else {
                        echo 'Frontend folder or package.json not found, skipping build.'
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    if (fileExists('backend/package.json')) {
                        echo 'Running backend tests (if any)...'
                        dir('backend') {
                            sh 'echo "No backend tests configured yet"'
                        }
                    } else {
                        echo 'Skipping backend tests.'
                    }

                    if (fileExists('frontend/package.json')) {
                        echo 'Running frontend tests...'
                        dir('frontend') {
                            sh 'npm test -- --watchAll=false'
                        }
                    } else {
                        echo 'Skipping frontend tests.'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Build & Test completed successfully!'
        }
        failure {
            echo 'Build or Test failed.'
        }
    }
}
